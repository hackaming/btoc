<script type="text/javascript">

$(document).ready(function() {
	var cn = '${projectVo.crowNumberPlain}';// 众筹份数
	var rcn = '${projectVo.crowRealNumberPlain}';// 众筹实际份数
	var percentage = Math.floor((rcn / cn) * 100) + "%";
	$("[id=bar_${p.index}]").css('width', percentage);
	$("[id=percentage_${p.index}]").html(percentage);
	
	$("#subtract_button").click(function(){
		var num = parseInt($("#crowdCount").val());
		if(num>0){
			num--;
		}
		$("#crowdCount").val(num);
	});
	$("#add_button").click(function(){
		var initValue = 4000;
		var num = parseInt($("#crowdCount").val());
		if(num<initValue){
			num++;
		}else{
			num = initValue;
		}
		$("#crowdCount").val(num);
	});
	
	$("#crowdCount").bind("input propertychange", function() {
		var num = $("#crowdCount").val();
		var r = /^\+?[1-9][0-9]*$/;
		if(r.test(num)){
			var initValue = 4000;//剩余份数
			if(num>initValue){
				$("#crowdCount").val(initValue);
			}
		}else{
			$("#crowdCount").val();
		}
	});
	$('#confirmBtn').on('click', function(){
		  var ii = layer.load();
 		  setTimeout(function(){ layer.close(ii);}, 1000000); 
		});
});
</script>
